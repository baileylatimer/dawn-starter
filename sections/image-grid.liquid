    {% endif %}
    {% if section.settings.image_4 != blank %}
      <div class="image-grid-item"><img src="{{ section.settings.image_4 | img_url: 'master' }}" alt="Image 4"></div>
    {% endif %}
    {% if section.settings.image_5 != blank %}
      <div class="image-grid-item"><img src="{{ section.settings.image_5 | img_url: 'master' }}" alt="Image 5"></div>
    {% endif %}
  </div>
</div>

