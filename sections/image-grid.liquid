
<style>
  .image-grid-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 10px;
    max-height: 750px;
  }

  .image-grid-item {
    position: relative;
    overflow: hidden;
    border-radius: 15px; /* Adjust border-radius as needed */
  }

  .image-grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-grid-container > :nth-child(1) {
    grid-column: 1 / span 1;
    grid-row: 1 / span 1;
  }

  .image-grid-container > :nth-child(2) {
    grid-column: 1 / span 1;
    grid-row: 2 / span 1;
  }
  

  .image-grid-container > :nth-child(3) {
    grid-column: 2 / span 1;
    grid-row: 1 / span 2;
  }

  .image-grid-container > :nth-child(4) {
    grid-column: 3 / span 1;
    grid-row: 1 / span 1;
  }

  .image-grid-container > :nth-child(5) {
    grid-column: 3 / span 1;
    grid-row: 2 / span 1;
  }

  @media (max-width: 768px) {
    .image-grid-container {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
    }

    .image-grid-container > :nth-child(1),
    .image-grid-container > :nth-child(2),
    .image-grid-container > :nth-child(4),
    .image-grid-container > :nth-child(5) {
      grid-column: span 1;
      grid-row: span 1;
      height: 240px
    }

    .image-grid-container > :nth-child(3) {
      grid-column: span 2;
      grid-row: span 1;
    }
    .image-grid-item img {
      height: 240px;
      object-fit: cover;
    }
  }
</style>

<div class="flex justify-center  px-d py-d">
  <div class="image-grid-container">
    {% if section.settings.image_1 != blank %}
      <div class="image-grid-item"><img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Image 1"></div>
    {% endif %}
    {% if section.settings.image_2 != blank %}
      <div class="image-grid-item"><img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="Image 2"></div>
    {% endif %}
    {% if section.settings.image_3 != blank %}
